            <action method="setActive">
                <path>system</path>
            </action>
        </reference>
    </adminhtml_connectmodules>

    <adminhtml_connectmodules_index>
        <update handle="adminhtml_connectmodules"/>
        <reference name="content">
            <block type="sr_version_check/adminhtml_modules" name="modules">
                <block type="sr_version_check/adminhtml_modules_grid" name="modules.grid" as="grid"/>
            </block>
        </reference>
    </adminhtml_connectmodules_index>

    <adminhtml_connectmodules_edit>
        <update handle="adminhtml_connectmodules"/>
        <reference name="content">
            <block type="sr_version_check/adminhtml_modules_edit" name="modules.edit"/>
        </reference>
    </adminhtml_connectmodules_edit>
